<p id="notice"><%= notice %></p>

<h1>Listing Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Artist sort order</th>
      <th>Song sort order</th>
      <th>Allow create artists</th>
      <th>Allow create songs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.artist_sort_order %></td>
        <td><%= preference.song_sort_order %></td>
        <td><%= preference.allow_create_artists %></td>
        <td><%= preference.allow_create_songs %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

